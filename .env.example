# Environment Variables Template
# Copy this file to .env.local and fill in your values
# cp env.template .env.local

# Wallet Connect (Required)
# Get your project ID at https://cloud.walletconnect.com/
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID=your_project_id_here

# Rootstock RPC URLs (Optional - defaults to public nodes)
NEXT_PUBLIC_RSK_MAINNET_RPC_URL=https://public-node.rsk.co
NEXT_PUBLIC_RSK_TESTNET_RPC_URL=https://public-node.testnet.rsk.co

# The Graph Subgraph URLs (Required after deploying subgraphs)
# Replace <your-subgraph-id> with your actual subgraph ID from The Graph Studio
# After deploying subgraph (T015), get the URL from: https://thegraph.com/studio/
# Format: https://api.studio.thegraph.com/query/<your-subgraph-id>/rootstock-timelock-testnet/v1
NEXT_PUBLIC_RSK_MAINNET_SUBGRAPH_URL=https://api.studio.thegraph.com/query/<your-subgraph-id>/rootstock-timelock-mainnet/v1
NEXT_PUBLIC_RSK_TESTNET_SUBGRAPH_URL=https://api.studio.thegraph.com/query/<your-subgraph-id>/rootstock-timelock-testnet/v1

# Rootstock Blockscout v2 APIs (Defaults provided, can override)
NEXT_PUBLIC_RSK_MAINNET_BLOCKSCOUT_URL=https://rootstock.blockscout.com/api
NEXT_PUBLIC_RSK_TESTNET_BLOCKSCOUT_URL=https://rootstock-testnet.blockscout.com/api

# 4byte Directory (Default provided)
NEXT_PUBLIC_4BYTE_DIRECTORY_URL=https://www.4byte.directory/api/v1/

# Optional: Enable testnet by default
NEXT_PUBLIC_ENABLE_TESTNETS=true

# Optional: OpenAI API Key for function explanation
OPENAI_API_KEY=YOUR-API-KEY